{
  "manifest_version": 3,
  "name": "YT Downloader",
  "version": "1.0.0",
  "description": "Download YouTube videos directly from your browser",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:3456/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
